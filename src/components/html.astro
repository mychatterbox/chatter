---
import ColorScheme from "components/colorscheme/head.astro";
import "styles/fonts.css";
import "styles/global.css";
import { ClientRouter } from 'astro:transitions';

export interface Props {
  title: string;
  description: string;
  searchTitle?: string;
  robots?: "noindex";
  ogType?: "website" | "article";
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  pubDate?: Date;
}

const {
  title,
  searchTitle,
  description,
  robots,
  ogType = "website",
  ogTitle = title,
  ogDescription = description,
  ogImage,
} = Astro.props;

const defaultOgImage = "https://chatter.kr/images/no_ogimage.png";
const finalOgImage = ogImage
  ? new URL(ogImage, Astro.url).toString()
  : defaultOgImage;

// const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pathname = Astro.url.pathname;
const canonicalURL = new URL(
  pathname === '/' ? '/' : pathname.replace(/\/$/, ''),
  Astro.site
).toString();

---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <ColorScheme />
    <meta name="color-scheme" content="light dark" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    {searchTitle && <meta name="title" content={searchTitle} />}
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    {robots && <meta name="robots" content={robots} />}

    <!-- âœ… Font Preload -->
    <link rel="preload" href="/fonts/PretendardGOV-Regular.subset.woff2" as="font" type="font/woff2" crossorigin>
    <!-- <link rel="preload" href="/fonts/PretendardGOV-Medium.subset.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/PretendardGOV-SemiBold.subset.woff2" as="font" type="font/woff2" crossorigin> -->
    <link rel="preload" href="/fonts/PretendardGOV-Bold.subset.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/CascadiaCode.woff2" as="font" type="font/woff2" crossorigin>


    <slot name="og">
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content="chatter.kr" />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={finalOgImage} />
    <meta property="twitter:card" content="summary_large_image" />
    </slot>

    <!-- Icons -->
    <link rel="icon" type="image/png" href="/icons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <link rel="shortcut icon" href="/icons/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="chatter" />
    <link rel="manifest" href="/site.webmanifest" crossorigin="use-credentials" />

    <!-- Sitemap & RSS -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" href={new URL("rss.xml", Astro.site)} title="rss" />
    <link rel="preconnect" href="https://static.cloudflareinsights.com">
    <link rel="preconnect" href="https://api-gateway.umami.dev">
    <script async src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "b1e9f6e1435046a19b449682f88c5806"}'></script>
    <slot name="head" />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>