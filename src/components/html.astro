---
import ColorScheme from "components/colorscheme/head.astro";
import font from "fonts/PretendardGOV-Medium.subset.woff2";
import at_icon from "images/apple-touch-icon.png";
import banner from "images/banner.jpg";
import icon from "images/icon.svg";
import "styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { ClientRouter } from 'astro:transitions';

export interface Props {
  title: string;
  description: string;
  searchTitle?: string;
  robots?: "noindex";
  ogType?: "website" | "article";
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  themeColor?: string;
}

const {
  title,
  searchTitle,
  description,
  robots,
  ogType = "website",
  ogTitle = title,
  ogDescription = description,
  ogImage,
  themeColor = "#121212",
} = Astro.props;

// 현재 페이지의 URL 경로에서 파일명 추출
const pathname = Astro.url.pathname; // 예: /minipc-pdcharger/
const filename = pathname.split('/').filter(Boolean).pop(); // 예: minipc-pdcharger

// 파일명을 기반으로 ogImage 자동 생성
const defaultOgImage = `https://chatter.kr/images/${filename}_1.webp`;
const finalOgImage = ogImage || defaultOgImage;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html class="h-full antialiased" lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    {searchTitle && <meta name="title" content={searchTitle} />}
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    {robots && <meta name="robots" content={robots} />}
    <slot name="og">
      <meta property="og:type" content={ogType} />
      <meta property="og:site_name" content="chatter.kr" />
      <meta property="og:title" content={ogTitle} />
      <meta property="og:description" content={ogDescription} />
      <meta property="og:url" content={canonicalURL} />
      {finalOgImage && <meta property="og:image" content={new URL(finalOgImage, Astro.url)} />}
      <meta property="twitter:card" content="summary_large_image" />
    </slot>
    <link rel="icon" href={icon.src} />
    <link rel="apple-touch-icon" href={at_icon.src} />
    <link rel="manifest" href="/site.webmanifest" crossorigin="use-credentials" />
    {themeColor && <meta name="theme-color" content={themeColor} />}
    <ColorScheme />
    <link rel="preload" href={font} as="font" type="font/woff2" crossorigin />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" href="/rss.xml" title="rss" />
    <slot name="head" />
    <ClientRouter />
    <meta name="naver-site-verification" content="e782519ae8e3850a5acf6d2089279ece14da7dac" />
  </head>
  <body class="flex h-full flex-col bg-white dark:bg-custom-dark">
    <slot />
  </body>
</html>