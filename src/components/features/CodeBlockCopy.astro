<script is:inline>
const copyCodeSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M9 18q-.825 0-1.412-.587T7 16V4q0-.825.588-1.412T9 2h9q.825 0 1.413.588T20 4v12q0 .825-.587 1.413T18 18zm0-2h9V4H9zm-4 6q-.825 0-1.412-.587T3 20V7q0-.425.288-.712T4 6t.713.288T5 7v13h10q.425 0 .713.288T16 21t-.288.713T15 22zm4-6V4z"/></svg>';
const copiedCodeSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="m10 13.6l5.9-5.9q.275-.275.7-.275t.7.275t.275.7t-.275.7l-6.6 6.6q-.3.3-.7.3t-.7-.3l-2.6-2.6q-.275-.275-.275-.7t.275-.7t.7-.275t.7.275z"/></svg>';

const addCopyCodeButtons = () => {
  const codeBlocks = Array.from(document.querySelectorAll(".code-block-wrapper"));

  for (const wrapper of codeBlocks) {
    if (wrapper.querySelector(".copy-code-button-enhanced")) continue;

    const preElement = wrapper.querySelector("pre");
    if (!preElement) continue;

    const fileName = wrapper.getAttribute("data-file") || wrapper.getAttribute("data-filename") || "";
    const defaultText = fileName.trim() !== "" ? `Copy ${fileName}` : "Copy code";
    const ariaLabel = fileName ? `Copy code from ${fileName}` : "Copy code";

    const button = document.createElement("button");
    button.className = "copy-code-button-enhanced";
    button.setAttribute("aria-label", ariaLabel);
    button.setAttribute("title", defaultText);
    button.setAttribute("type", "button");

    button.innerHTML = `
      <div class="copy-button-content">
        <span class="copy-icon" aria-hidden="true">${copyCodeSvg}</span>
        <span class="copy-text">${defaultText}</span>
      </div>
    `;

    wrapper.appendChild(button);

    button.addEventListener("keydown", (e) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        button.click();
      }
    });

    button.addEventListener("click", async () => {
      const code = preElement.querySelector("code");
      const codeText = code?.innerText || preElement.textContent || "";
      
      if (!codeText.trim()) return;

      const textSpan = button.querySelector(".copy-text");
      const iconSpan = button.querySelector(".copy-icon");

      try {
        await navigator.clipboard.writeText(codeText);
        
        textSpan.textContent = "Copied!";
        iconSpan.innerHTML = copiedCodeSvg;
        button.classList.add("copied");
        button.setAttribute("aria-label", "Code copied to clipboard");
        
        const resetTimer = setTimeout(() => {
          textSpan.textContent = defaultText;
          iconSpan.innerHTML = copyCodeSvg;
          button.classList.remove("copied");
          button.setAttribute("aria-label", ariaLabel);
        }, 2000);

        button._resetTimer = resetTimer;
        
      } catch (err) {
        console.error("Copy failed:", err);
        
        const textarea = document.createElement("textarea");
        textarea.value = codeText;
        textarea.style.position = "fixed";
        textarea.style.left = "-9999px";
        document.body.appendChild(textarea);
        textarea.select();
        
        try {
          document.execCommand("copy");
          
          textSpan.textContent = "Copied!";
          iconSpan.innerHTML = copiedCodeSvg;
          button.classList.add("copied");
          button.setAttribute("aria-label", "Code copied to clipboard");
          
          setTimeout(() => {
            textSpan.textContent = defaultText;
            iconSpan.innerHTML = copyCodeSvg;
            button.classList.remove("copied");
            button.setAttribute("aria-label", ariaLabel);
          }, 2000);
          
        } catch (fallbackErr) {
          console.error("Fallback copy failed:", fallbackErr);
          textSpan.textContent = "Copy failed";
          setTimeout(() => {
            textSpan.textContent = defaultText;
          }, 2000);
        } finally {
          document.body.removeChild(textarea);
        }
      }
    });
  }
};

if (!window._copyButtonsInitialized) {
  window._copyButtonsInitialized = true;
  
  const init = () => {
    setTimeout(addCopyCodeButtons, 100);
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

  document.addEventListener('astro:page-load', init);

  if (typeof MutationObserver !== 'undefined') {
    const observer = new MutationObserver((mutations) => {
      for (const mutation of mutations) {
        if (mutation.addedNodes.length > 0) {
          setTimeout(addCopyCodeButtons, 100);
          break;
        }
      }
    });
    
    observer.observe(document.body, {
      childList: true,
      subtree: true
    });
  }
}
</script>

